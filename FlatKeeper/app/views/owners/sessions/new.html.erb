<div class="container background-form">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_for(resource, as: resource_name, html: {class: 'form'}, url: session_path(resource_name)) do |f| %>
        <legend>Welcome LandLord!</legend>
        <hr>
        <fieldset>
          <legend>Inicia Sesión</legend>
          <div class="form-group" >
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: 'form-control col-6', placeholder: 'tu@correo.com' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, 
          autocomplete: "off",
          class: 'form-control col-6', 
          placeholder: 'Password' %>
            <div class="form-group form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox"> Remember me
              </label>
            </div>
          </div>
          <div class="form-group" style="display: inline;">
            <%= f.submit 'Iniciar sesión', class: 'btn btn-primary' %>
            <div class="btn-group">
              <a class='btn btn-primary disabled'><i class="fa fa-facebook" style="width:16px; height:20px"></i></a>
              <a class='btn btn-primary ' href='<%= owner_facebook_omniauth_authorize_path %>' style="width:12em ; color: white;"> Sign in with Facebook</a>
            </div>
          </div>
          <br>
          <%= render "owners/shared/links" %>
        </fieldset>
      <% end %>
    </div>
  </div>
</div>

<div class="container background-form">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-12">

<%= form_for(resource, as: resource_name,  html: {class: 'form'},url: registration_path(resource_name)) do |f| %>
 <legend>Comencemos LandLord!</legend>
  <hr>
 <legend>Regístrate</legend>
 <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, 
    class: 'form-control', 
    placeholder: 'tu@correo.com', 
    autofocus: true %> 
  </div>

  <div class="form-group">
     <%= f.label :password, 'Contraseña'%>
      <% if @minimum_password_length %>
        <em>(Al menos <%= @minimum_password_length %> caracteres)</em>
      <% end %>
    <%= f.password_field :password, 
    autocomplete: "off", 
    class: 'form-control', 
    placeholder: 'Contraseña' %>
   
  </div>

   <div class="form-group">
      <%= f.label :password_confirmation, 'Confirma contraseña'%>
      <%= f.password_field :password_confirmation, autocomplete: "off", 
      class: 'form-control', placeholder: 'Contraseña' %>
    
    </div>
    <div class="form-group ">
        <div class="btn-group col-sm-12">
        <%= f.submit 'Registrarse', class: 'btn btn-primary' %>
     </div>
    </div>
<% end %>
 </div>
 </div>

 </div>

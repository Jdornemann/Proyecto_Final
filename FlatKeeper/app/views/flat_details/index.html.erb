<div class="container background-form" align="center">
  <!-- Content here -->
  <h1>Tus Propiedades</h1>
  <br>
  <div class="col-md-12 padding-zero">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 complex-2 complex vertical-border">
      <div class="table-responsive no-row-border" >
        <table id='MisPropiedades' class="table table-striped table-hover">
          <thead class="thead-dark">
            <tr>
              <th>Alias</th>
              <th>N° Unidad</th>
              <th>Dirección</th>
              <th>Pais/Ciudad</th>
              <th>Proposito</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @flat_details.each do |flat_detail| %>
              <tr>
                <td><%= flat_detail.name_alias %></td>
                <td><%= flat_detail.unit_number %></td>
                <td><%= flat_detail.address %></td>
                <td><%= flat_detail.country  + ',' + flat_detail.city %></td>
                <td><%= flat_detail.business_purpose %></td>
                <td><%= link_to 'Show', flat_detail %></td>
                <td><%= link_to 'Edit', edit_flat_detail_path(flat_detail) %></td>
                <td><%= link_to 'Destroy', flat_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <br>
  <%= link_to 'Agrega una propiedad', new_flat_detail_path, class:"btn btn-outline-primary btn-lg btn-block" %>
</div>
<script>
  $('#MisPropiedades').DataTable();
</script>


<div class="row justify-content-center">
<div class="col-8">

<div class="container">

<%= form_with(model: flat_detail, local: true, html: {class: 'form'},class:'form-group') do |form| %>

  <% if flat_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flat_detail.errors.count, "error") %> prohibited this flat_detail from being saved:</h2>
      <ul>
      <% flat_detail.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
 <h2>Nueva Propiedad</h2>

  <div class='form-group'>
   <%= form.label :name_alias, 'Alias Unidad' %>
  <%= form.text_field :name_alias, id: :name_alias,required: 'true', autofocus: 'true', class: 'form-control'  %>
  </div>

 <div class='form-group'>
   <%= form.label :address, 'Dirección' %>
  <%= form.text_field :address, id: :address,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
  <div class='form-group'>
   <%= form.label :country, 'País' %>
  <%= form.text_field :country, id: :country,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
   <div class='form-group'>
   <%= form.label :city, 'Ciudad' %>
  <%= form.text_field :city, id: :city,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
 <div class='form-group'>
   <%= form.label :unit_number, 'N° Unidad' %>
  <%= form.text_field :unit_number, id: :unit_number,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
  <div class='form-group'>
   <%= form.label :floor, 'N° Piso' %>
  <%= form.text_field :floor, id: :floor,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
  
  <div class='form-group'>
   <%= form.label :area_size, 'Metros'%><sup>2</sup> <label>Unidad</label>

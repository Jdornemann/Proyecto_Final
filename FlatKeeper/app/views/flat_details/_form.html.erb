  <%= form.text_field :room_quantity, id: :room_quantity,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
 <div class='form-group'>
   <%= form.label :bed_quantity, 'Cantidad Camas'%>
  <%= form.text_field :bed_quantity, id: :bed_quantity,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div> 
     <div class='form-group'>
   <%= form.label :bathroom_quantity, 'Cantidad Baños' %>
  <%= form.text_field :bathroom_quantity, id: :bathroom_quantity,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
  <div class='form-group'>
   <%= form.label :business_purpose, 'Proposito del inmueble' %>
  <%= form.text_field :business_purpose, id: :business_purpose,required: 'true', autofocus: 'true', class: 'form-control' %>
  </div>
 
  
  <%= form.submit 'Todo Listo!', :class => 'btn btn-info' %>
